<Application x:Class="Startup.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="View/OpenWindow.xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="themes/ButtonStyle.xaml"/>
                <ResourceDictionary Source="themes/CheckBoxStyle.xaml"/>
                <ResourceDictionary Source="themes/ComboBoxStyle.xaml" />
                <ResourceDictionary Source="themes/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="themes/MenuStyle.xaml" />
                <ResourceDictionary Source="themes/MenuItemStyle.xaml" />
                <ResourceDictionary Source="themes/PasswordBoxStyle.xaml" />
                <ResourceDictionary Source="themes/ScrollBarStyle.xaml" />
                <ResourceDictionary Source="themes/ScrollViewerStyle.xaml" />
                <ResourceDictionary Source="themes/TabControlStyle.xaml" />
                <ResourceDictionary Source="themes/TextBoxStyle.xaml" />
                <ResourceDictionary Source="themes/WindowStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
